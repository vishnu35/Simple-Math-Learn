<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="fill_vertical" >

    <Button
        android:id="@+id/Button02"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button03"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/colors"
        android:text="All"
        android:textSize="22dp" />

    <Button
        android:id="@+id/Button04"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button03"
        android:layout_below="@+id/Button03"
        android:layout_marginTop="30dp"
        android:background="@drawable/colors"
        android:text="Multilication"
        android:textSize="22dp" />

    <Button
        android:id="@+id/Button01"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button04"
        android:layout_below="@+id/Button04"
        android:layout_marginTop="30dp"
        android:background="@drawable/colors"
        android:text="Division"
        android:textSize="22dp" />

    <Button
        android:id="@+id/Button03"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/colors"
        android:text="Substraction"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button1"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_below="@+id/Button01"
        android:layout_marginTop="30dp"
        android:background="@drawable/colors"
        android:text="Addition"
        android:textSize="22dp" />

    <Button
        android:id="@+id/Button05"
        style="@style/ButtonText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="30dp"
        android:background="@drawable/colors"
        android:text="Numbers"
        android:textSize="22dp" />

</RelativeLayout>